{
  "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
  "extends": ["ultracite"],
  "files": {
    "includes": [
      "**",
      "!**/node_modules/**/*",
      "!**/migrations/**/*",
      "!**/.next/**/*",
      "!**/.vscode/README.md"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "master"
  },
  "linter": {
    "rules": {
      "nursery": {},
      "style": {
        "noNestedTernary": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    }
  },
  "overrides": [
    {
      "includes": ["**/*.spec.ts"],
      "javascript": {
        "globals": ["vitest", "describe", "it", "expect"]
      }
    }
  ]
}
